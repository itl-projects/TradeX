<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8EDED"
    tools:context=".MobileAuthentication">

    <ImageView
        android:id="@+id/smartphn"
        android:layout_width="157dp"
        android:layout_height="129dp"
        android:src="@drawable/smartphone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.198" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/smathphn"
        android:textColor="#040303"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smartphn"
        app:layout_constraintVertical_bias="0.066" />

    <TextView
        android:id="@+id/belowsmartphntext"
        android:layout_width="273dp"
        android:layout_height="44dp"
        android:text="@string/text"
        android:textColor="#090909"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.029" />

    <androidx.cardview.widget.CardView
        android:id="@+id/mobilecard"
        android:layout_width="379dp"
        android:layout_height="248dp"
        app:cardBackgroundColor="#F8F4F4"
        android:background="@drawable/carddesign"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/belowsmartphntext">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/carddesign"
            android:elevation="@dimen/cardview_compat_inset_shadow"
            android:orientation="vertical">

            <Button
                android:layout_width="219dp"
                android:layout_height="51dp"
                android:background="@drawable/carddesign"
                android:backgroundTint="@color/colorAccent"
                android:text="continue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mobilenumber"
                app:layout_constraintVertical_bias="0.772" />

            <EditText
                android:id="@+id/mobilenumber"
                android:layout_width="236dp"
                android:layout_height="42dp"
                android:background="@drawable/carddesign"
                android:gravity="center"
                android:hint="mobile number"

                android:textColorHint="#151414"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.115" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>