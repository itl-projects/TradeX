<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TradeXLoginPage"
    android:background="#ffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:id="@+id/full"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:id="@+id/layreal">

            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="86dp"
                android:layout_height="95dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="322dp"
                android:layout_marginLeft="322dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="124dp">

                <ImageView
                    android:id="@+id/corner"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/round_shape" />


            </FrameLayout>

            <TextView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="118dp"
                android:layout_marginEnd="232dp"
                android:layout_marginRight="232dp"
                android:layout_marginBottom="34dp"
                android:gravity="center_horizontal"
                android:text="TradeX"
                android:textAlignment="center"
                android:textColor="#030404"
                android:textSize="50sp" />

            <ImageView
                android:id="@+id/corner1"
                android:layout_width="66dp"
                android:layout_height="67dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="248dp"
                android:layout_marginLeft="248dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="97dp"
                android:layout_marginRight="97dp"
                android:layout_marginBottom="141dp"
                android:background="@drawable/round_shape" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:id="@+id/realtive">

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="370dp"
                android:layout_height="206dp"
                android:backgroundTint="#FFFF"
                android:background="@drawable/carddesign"
                android:elevation="@dimen/cardview_compat_inset_shadow"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="19dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="35dp">

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="user name"
                        android:paddingLeft="10dp"
                        android:textColorHint="#837C7C"
                        android:drawableLeft="@drawable/usericon"
                        android:backgroundTint="@color/slidercolor"
                        android:layout_marginTop="40dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColorHint="#837C7C"
                        android:drawableLeft="@drawable/passwordicon"
                        android:paddingLeft="10dp"
                        android:hint="password"
                        android:backgroundTint="@color/slidercolor"
                        android:layout_marginTop="10dp"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/logsignreal">

                <RadioButton
                    android:id="@+id/rememberme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginEnd="263dp"
                    android:layout_marginRight="263dp"
                    android:layout_marginBottom="78dp"
                    android:text="Remember me"
                    android:checked="true"
                    android:textColor="#030404" />

                <Button
                    android:id="@+id/login"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/sign"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="302dp"
                    android:layout_marginLeft="302dp"
                    android:layout_marginBottom="9dp"
                    android:background="@drawable/login_button_shape"
                    android:text="LOGIN" />

                <Button
                    android:id="@+id/sign"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="304dp"
                    android:layout_marginLeft="304dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/login_button_shape"
                    android:text="SIGN UP" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/lastlayout">

            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".8"
            android:id="@+id/googlelayoyt">

            <FrameLayout
                android:id="@+id/frame2"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="58dp"
                android:layout_marginEnd="311dp"
                android:layout_marginRight="311dp"
                android:layout_marginBottom="0dp">

                <ImageView
                    android:id="@+id/corner2"
                    android:layout_width="100dp"
                    android:layout_height="96dp"
                    android:background="@drawable/round_shape" />


            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="206dp"
                android:layout_marginRight="206dp"
                android:layout_marginBottom="25dp"
                android:text="Also Login with"
                android:textColor="#030404"
                android:textSize="15sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="105dp"
                android:layout_marginRight="105dp"
                android:id="@+id/google"
                android:layout_marginBottom="10dp">

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="11dp"
                android:id="@+id/fb">

            </Button>


        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>